<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_more_groups"
    android:layout_width="match_parent"
    android:layout_height="@dimen/seal_search_show_more_height"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/seal_search_show_more_padding_left"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/seal_search_show_more_image_margin_right"
            android:scaleType="fitCenter"
            android:src="@drawable/seal_search_blue_icon" />

        <TextView
            android:id="@+id/search_show_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seal_search_more_group"
            android:textColor="@color/seal_search_show_more_text_color"
            android:textSize="@dimen/seal_search_show_more_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_search_item_devi_height"
        android:background="@color/seal_search_devi_color" />
</LinearLayout>
