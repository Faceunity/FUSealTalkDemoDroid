<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <io.rong.imkit.widget.AsyncImageView
        android:id="@+id/main_iv_create_group_portrait"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/main_bg_add_group_portrait" />

    <EditText
        android:id="@+id/main_et_create_group_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/seal_bg_edit_bottom_blue_line"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textColorHint="@color/default_sub_text"
        android:gravity="center"
        tools:hint="@string/profile_group_name_word_limit_format"
        android:maxLength="10" />

    <Button
        android:id="@+id/main_btn_confirm_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/common_btn_blue_selector"
        android:text="@string/common_confirm"
        android:textColor="#FFF" />

</LinearLayout>