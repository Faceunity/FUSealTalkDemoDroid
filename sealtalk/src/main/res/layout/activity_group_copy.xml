<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@color/white"
        android:orientation="vertical">

        <cn.rongcloud.im.ui.widget.SelectableRoundedImageView
            android:id="@+id/iv_group_portrait"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            app:sriv_left_bottom_corner_radius="@dimen/seal_new_friend_header_radius"
            app:sriv_left_top_corner_radius="@dimen/seal_new_friend_header_radius"
            app:sriv_right_bottom_corner_radius="@dimen/seal_new_friend_header_radius"
            app:sriv_right_top_corner_radius="@dimen/seal_new_friend_header_radius"
            tools:src="@drawable/common_default_portrait" />

        <TextView
            android:id="@+id/tv_group_member_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="21dp"
            android:text="@string/profile_group_has_members_format"
            android:textSize="@dimen/seal_group_notice_item_text_14"
            android:textColor="@color/color_gray_text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/seal_group_notice_item_text_14"
            android:text="@string/seal_group_manager_copy_tip_title"
            android:textColor="@color/color_gray_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/seal_group_notice_item_text_14"
            android:text="@string/seal_group_manager_copy_tip_content"
            android:textColor="@color/color_gray_text"/>
        <Button
            android:id="@+id/btn_copy"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/seal_group_manager_copy_btn_blue_selector"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textColor="@color/white"
            android:textSize="@dimen/seal_update_staccount_dialog_title"
            android:text="@string/seal_group_manager_copy_btn_content"/>
    </LinearLayout>
</LinearLayout>