<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_set_account_update_password_height"
        android:layout_marginStart="@dimen/seal_set_account_update_password_margin"
        android:layout_marginEnd="@dimen/seal_set_account_update_password_margin"
        android:gravity="center_vertical"
        android:text="@string/seal_update_password_current_password"
        android:textColor="@color/seal_set_account_update_password_tag"
        android:textSize="@dimen/seal_set_account_update_password_tag_text_size" />

    <EditText
        android:id="@+id/et_old_password"
        style="@style/EditTextStyle.Alignment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_set_account_update_password_height"
        android:background="@color/white"
        android:inputType="textPassword"
        android:lines="1"
        android:gravity="center_vertical"
        android:maxLength="16"
        android:paddingStart="@dimen/seal_set_account_update_password_margin"
        android:paddingEnd="@dimen/seal_set_account_update_password_margin"
        android:textColor="@color/seal_set_account_update_password_value"
        android:textSize="@dimen/seal_set_account_update_password_value_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_set_account_update_password_height"
        android:layout_marginStart="@dimen/seal_set_account_update_password_margin"
        android:layout_marginEnd="@dimen/seal_set_account_update_password_margin"
        android:gravity="center_vertical"
        android:text="@string/seal_update_password_new_password"
        android:textColor="@color/seal_set_account_update_password_tag"
        android:textSize="@dimen/seal_set_account_update_password_tag_text_size" />

    <EditText
        android:id="@+id/et_new_password"
        style="@style/EditTextStyle.Alignment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_set_account_update_password_height"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:hint="@string/seal_update_password_password_hint"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="16"
        android:paddingStart="@dimen/seal_set_account_update_password_margin"
        android:paddingEnd="@dimen/seal_set_account_update_password_margin"
        android:textColor="@color/seal_set_account_update_password_value"
        android:textColorHint="@color/default_sub_text"
        android:textSize="@dimen/seal_set_account_update_password_value_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_set_account_update_password_height"
        android:layout_marginStart="@dimen/seal_set_account_update_password_margin"
        android:layout_marginEnd="@dimen/seal_set_account_update_password_margin"
        android:gravity="center_vertical"
        android:text="@string/seal_update_password_confirm_password"
        android:textColor="@color/seal_set_account_update_password_tag"
        android:textSize="@dimen/seal_set_account_update_password_tag_text_size" />

    <EditText
        android:id="@+id/et_confirm_password"
        style="@style/EditTextStyle.Alignment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_set_account_update_password_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/seal_update_password_password_hint"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="16"
        android:paddingStart="@dimen/seal_set_account_update_password_margin"
        android:paddingEnd="@dimen/seal_set_account_update_password_margin"
        android:textColor="@color/seal_set_account_update_password_value"
        android:textColorHint="@color/default_sub_text"
        android:textSize="@dimen/seal_set_account_update_password_value_text_size" />

    <Button
        android:id="@+id/btn_update"
        android:layout_marginTop="@dimen/seal_set_account_update_password_btn_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_file_preview_download_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rc_ac_btn_file_download_open_button"
        android:textSize="@dimen/rc_file_preview_download_button_text_size"
        android:stateListAnimator="@null"
        android:text="@string/seal_update_password_save"
        android:textColor="@color/white" />

</LinearLayout>