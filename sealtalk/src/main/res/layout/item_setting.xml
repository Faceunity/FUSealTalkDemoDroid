<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/seal_setting_item_margin"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_image"
        android:layout_marginLeft="@dimen/seal_setting_item_margin"
        android:textColor="@color/seal_setting_item_content"
        android:textSize="@dimen/seal_setting_item_text_size"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/iv_tag_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/seal_setting_item_margin"
        android:layout_toRightOf="@id/tv_content"
        />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_content"
        android:textColor="@color/seal_setting_item_value"
        android:gravity="right"
        android:ellipsize="end"
        android:textSize="@dimen/seal_setting_item_text_size"
        android:layout_marginRight="@dimen/seal_setting_item_margin"
        android:layout_marginLeft="6dp"
        android:maxLines="1"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <cn.rongcloud.im.ui.widget.switchbutton.SwitchButton
        android:id="@+id/sb_switch"
        android:layout_marginRight="@dimen/seal_setting_item_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:kswAnimationDuration="300"
        app:kswBackDrawable="@drawable/seal_switchbtn_check_selector"
        app:kswBackMeasureRatio="1.4"
        app:kswThumbDrawable="@drawable/seal_ic_switchbtn_thumb"
        app:kswThumbMarginBottom="-8dp"
        app:kswThumbMarginLeft="-5dp"
        app:kswThumbMarginRight="-5dp"
        app:kswThumbMarginTop="-2.5dp" />

    <ImageView
        android:id="@+id/iv_select_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/seal_setting_item_margin"
        />
    <ImageView
        android:id="@+id/iv_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/seal_setting_item_margin"/>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_setting_item_divider"
        android:layout_marginLeft="@dimen/seal_setting_item_margin"
        android:layout_marginRight="@dimen/seal_setting_item_margin"
        android:background="@color/seal_setting_item_divider"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>