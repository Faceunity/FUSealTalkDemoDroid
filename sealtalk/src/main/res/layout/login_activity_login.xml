<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.LoginActivity">


    <ImageView
        android:id="@+id/iv_login_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/seal_login_bg_margin_right"
        android:scaleType="centerCrop"
        android:src="@drawable/seal_ic_login_bg" />


    <LinearLayout
        android:id="@+id/de_login_logo_contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/seal_login_logo_margin_top"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/de_login_logo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/seal_app_logo" />

        <TextView
            android:id="@+id/del_login_logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:includeFontPadding="false"
            android:text="@string/seal_login_text_title"
            android:textColor="@color/color_black_text"
            android:textSize="19sp"
            android:visibility="gone" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/de_login_logo_contain">

    </FrameLayout>

    <!-- 登陆界面底部布局 -->

    <TextView
        android:id="@+id/tv_find_passsword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/seal_login_buttom_padding"
        android:text="@string/seal_login_text_forget_password"
        android:textColor="@color/seal_login_text_button_color"
        android:textSize="@dimen/seal_login_text_button_text_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_register_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/seal_login_buttom_padding"
        android:text="@string/seal_login_text_new_user"
        android:textColor="@color/seal_login_text_button_color"
        android:textSize="@dimen/seal_login_text_button_text_size"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_registration_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@null"
                android:button="@drawable/seal_checkbox_selector"/>

            <TextView
                android:id="@+id/tv_registration_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#484848"
                android:textSize="@dimen/seal_login_rongcloud_text_size" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_seal_talk_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/seal_talk_version_text"
            android:textColor="@color/deep_gray"
            android:textSize="@dimen/seal_login_rongcloud_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_register_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/seal_login_buttom_padding"
        android:text="@string/seal_login_text_new_user"
        android:textColor="@color/seal_login_text_button_color"
        android:textSize="@dimen/seal_login_text_button_text_size"
        android:visibility="gone" />

    <!--    SealTalk V5.1.1-->

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/seal_login_buttom_padding"
        android:text="@string/seal_login_text_login"
        android:textColor="@color/seal_login_text_button_color"
        android:textSize="@dimen/seal_login_text_button_text_size"
        android:visibility="gone" />


    <!--语言切换-->
    <TextView
        android:id="@+id/tv_change_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:padding="@dimen/seal_login_text_change_lang_padding"
        android:text="@string/lang_en"
        android:textColor="@color/white"
        android:textSize="@dimen/seal_login_text_change_lang_text_size" />

    <TextView
        android:id="@+id/tv_proxy_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="代理"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/seal_login_text_change_lang_text_size" />

</RelativeLayout>