<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/common_dialog_width"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/common_dialog_bg"
    android:minHeight="@dimen/common_dialog_min_height"
    android:orientation="vertical"
    tools:layout_marginTop="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/common_dialog_common_min_height"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyle.Alignment"
            android:id="@+id/security_tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:paddingTop="@dimen/common_dialog_text_margin_top"
            android:text="@string/seal_talk_security_kick_out"
            android:textColor="@color/color_black_111F2C"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/security_tv_dialog_phone"
            style="@style/TextStyle.Alignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/seal_talk_security_kick_out_phone"
            android:textColor="@color/color_blue_9F"
            android:textSize="@dimen/common_dialog_text_size" />

        <TextView
            android:id="@+id/security_tv_dialog_des"
            style="@style/TextStyle.Alignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/seal_talk_security_kick_out_des"
            android:textColor="@color/color_black_111F2C"
            android:textSize="@dimen/common_dialog_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dialog_line_width"
        android:background="@color/common_dialog_base_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dialog_button_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_btn_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_dialog_single_positive_seletor"
            android:text="@string/common_confirm"
            android:textColor="@color/default_clickable_text"
            android:textSize="@dimen/common_dialog_text_size" />
    </LinearLayout>

</LinearLayout>