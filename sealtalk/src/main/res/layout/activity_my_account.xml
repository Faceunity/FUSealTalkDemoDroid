<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <cn.rongcloud.im.ui.view.UserInfoItemView
        android:id="@+id/uiv_userinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_userfino_item_height"
        app:item_userinfo_portrait_width="@dimen/seal_mine_userfino_item_protrait"
        app:item_userinfo_portrait_height="@dimen/seal_mine_userfino_item_protrait"
        app:item_right_show="true"
        android:paddingStart="14dp"
        app:item_userinfo_portrait="@drawable/rc_default_portrait"
        app:item_userinfo_name="@string/seal_mine_my_account_portrait"
        app:item_userinfo_divider="true"
        >

    </cn.rongcloud.im.ui.view.UserInfoItemView>


    <cn.rongcloud.im.ui.view.SettingItemView
        android:id="@+id/siv_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_my_account_item_height"
        app:item_content="@string/seal_mine_my_account_nickname"
        app:item_divider="true"
        >

    </cn.rongcloud.im.ui.view.SettingItemView>

    <cn.rongcloud.im.ui.view.SettingItemView
        android:id="@+id/siv_saccount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_my_account_item_height"
        app:item_content="@string/seal_mine_my_account_sknumber"
        app:item_right_image="@drawable/seal_ic_mine_go"
        app:item_divider="true"
        >

    </cn.rongcloud.im.ui.view.SettingItemView>

    <cn.rongcloud.im.ui.view.SettingItemView
        android:id="@+id/siv_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_my_account_item_height"
        app:item_content="@string/seal_mine_my_account_phone_number"
        >

    </cn.rongcloud.im.ui.view.SettingItemView>

    <cn.rongcloud.im.ui.view.SettingItemView
        android:id="@+id/siv_gender"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/seal_common_normal_margin"
        android:layout_height="@dimen/seal_mine_my_account_item_height"
        app:item_content="@string/seal_mine_my_account_gender"
        >

    </cn.rongcloud.im.ui.view.SettingItemView>
</LinearLayout>