<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/seal_login_fragment_login_margin_top"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_country_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/seal_login_fragment_login_country_select_margin_left"
        android:layout_marginRight="@dimen/seal_login_fragment_login_country_select_margin_right"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/seal_login_fragment_login_text_padding"
            android:paddingRight="@dimen/seal_login_fragment_login_text_padding"
            android:text="@string/seal_login_countries_and_regions"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_country_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:paddingLeft="@dimen/seal_login_fragment_login_text_padding"
            android:paddingRight="@dimen/seal_login_fragment_login_text_padding"
            android:text="@string/china"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/seal_ic_rp_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/seal_login_fragment_login_phonenumber_margin_left"
        android:layout_marginTop="@dimen/seal_login_fragment_login_phonenumber_margin_top"
        android:layout_marginRight="@dimen/seal_login_fragment_login_phonenumber_margin_right"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/seal_login_fragment_login_text_padding"
            android:paddingRight="@dimen/seal_login_fragment_login_text_padding"
            android:text="+86"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium.Inverse" />


        <cn.rongcloud.im.ui.widget.ClearWriteEditText
            android:id="@+id/cet_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rc_ed_public_service_search_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/seal_login_phone_number"
            android:inputType="phone"
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </LinearLayout>

    <cn.rongcloud.im.ui.widget.ClearWriteEditText
        android:id="@+id/cet_login_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/seal_login_fragment_login_password_margin_left"
        android:layout_marginTop="@dimen/seal_login_fragment_login_password_margin_top"
        android:layout_marginRight="@dimen/seal_login_fragment_login_password_margin_right"
        android:background="@drawable/rc_ed_public_service_search_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/seal_login_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/seal_login_fragment_login_btn_margin_left"
        android:layout_marginTop="@dimen/seal_login_fragment_login_btn_margin_top"
        android:layout_marginRight="@dimen/seal_login_fragment_login_btn_margin_right"
        android:background="@drawable/seal_login_btn_selector"
        android:text="@string/seal_login_text_login"
        android:textColor="@color/white"
        android:textSize="@dimen/seal_login_fragment_login_btn_text_size" />

</LinearLayout>