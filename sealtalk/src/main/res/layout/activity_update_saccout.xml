<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.rongcloud.im.ui.view.UserInfoItemView
        android:id="@+id/uiv_userinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_userfino_item_height"
        android:layout_marginTop="@dimen/seal_mine_user_margin_top"
        app:item_userinfo_portrait_height="@dimen/seal_mine_userfino_item_protrait"
        app:item_userinfo_portrait_width="@dimen/seal_mine_userfino_item_protrait">

    </cn.rongcloud.im.ui.view.UserInfoItemView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_search_item_title_height"
        android:layout_marginTop="@dimen/seal_update_staccount_edit_margin"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_staccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/seal_update_staccount_name_margin"
            android:text="@string/seal_mine_my_account_sknumber"
            android:textColor="@color/text_black"
            android:textSize="@dimen/seal_update_staccount_name_size" />

        <cn.rongcloud.im.ui.widget.ClearWriteEditText
            android:id="@+id/cet_update_staccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/seal_update_name_edit_margin"
            android:layout_marginRight="@dimen/seal_update_name_edit_margin"
            android:layout_toRightOf="@id/tv_staccount"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:maxLength="20"
            android:maxLines="1"
            android:digits="@string/seal_update_staccount_edit_digist"
            android:textColorHint="@color/seal_account_staccount_edit_hint"
            android:textColor="@color/color_black_text"
            android:textSize="@dimen/seal_update_staccount_name_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/seal_update_staccount_name_margin"
        android:layout_marginTop="@dimen/seal_update_name_margin_top"
        android:text="@string/seal_update_staccount_tips"
        android:textColor="@color/seal_setting_item_value"
        android:textSize="@dimen/seal_update_staccount_hint_size" />

</LinearLayout>