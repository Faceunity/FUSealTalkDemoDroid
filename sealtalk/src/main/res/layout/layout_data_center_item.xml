<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_data_center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_search_item_height"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="20dp"
        android:background="#cccccc"
        app:layout_constraintBottom_toBottomOf="@+id/item_data_center"
        app:layout_constraintEnd_toEndOf="@+id/item_data_center"
        app:layout_constraintStart_toStartOf="@+id/item_data_center" />

</androidx.constraintlayout.widget.ConstraintLayout>