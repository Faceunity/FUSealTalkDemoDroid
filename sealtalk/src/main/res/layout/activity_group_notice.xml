<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_is_null"
        style="@style/TextStyle.Alignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/seal_group_notice_null_tips"
        android:textColor="@color/color_black_text"
        android:textSize="@dimen/seal_group_notice_null_tip_size"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_group_notice_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/seal_new_friends_divider"
        android:dividerHeight="@dimen/seal_new_friends_divider_height" />

</FrameLayout>